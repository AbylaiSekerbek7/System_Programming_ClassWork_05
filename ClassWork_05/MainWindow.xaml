<Window x:Class="ClassWork_05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork_05"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Click="NewWindow_Click" Content="New Window in Thread" Margin="5"/>
            <Button Click="StartAllThread_Click" Content="Start all Thread" Margin="5"/>
            <Button Click="StopAllThread_Click" Content="Stop all Thread" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
