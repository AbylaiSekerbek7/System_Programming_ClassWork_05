<Window x:Class="ClassWork_05.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork_05"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1.75*"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" x:Name="txtOut" Grid.Row="0" Text="foeowefj"/>
        <StackPanel Grid.Row="1">
            <Button Click="Stop_Click" Grid.Row="1" Content="Stop" Margin="3"/>
            <Button Click="Resume_Click" Grid.Row="1" Content="Resume" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
